@model CollectionApp.ViewModels.CreateMyCollectionViewModel

@{
    ViewData["Title"] = "New Collection";
}

<div class="text-center">
    <h1 class="display-4" localize-content>Page for creating a new collection</h1>
</div>

<form method="post" asp-controller="MyCollections" asp-action="Create" asp-route-userId="@ViewBag.Id">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Name"></label><br/>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Theme"></label><br/>
        <input asp-for="Theme"/>
        <span asp-validation-for="Theme"></span>
    </div>
    <div>
        <label asp-for="Summary"></label><br/>
        <input asp-for="Summary"/>
        <span asp-validation-for="Summary"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-outline-primary mt-1" localize-content>Create</button>
    </div>
</form>