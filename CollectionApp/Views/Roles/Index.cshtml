@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
 
<h2 localize-content>List of Roles</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-outline-danger" localize-content>
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a asp-action="Create" class="btn btn-sm btn-outline-info" localize-content>Add Role</a>
<a asp-action="UserList" class="btn btn-sm btn-outline-info" localize-content>List of Users</a>