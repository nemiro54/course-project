@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewBag.Title = "List of Users";
}

<table class="table">
    <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Collecctions</th>
        <th>Roles</th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Email</td>
            <td>
                <a asp-controller="MyCollections" asp-action="Index" asp-route-userid="@user.Id">View Collections</a>
            </td>
            <td>
                <a class="btn btn-sm btn-outline-primary text-center" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Edit Role</a>
            </td>
        </tr>
    }
</table>